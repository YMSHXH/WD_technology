<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/begin1_image"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_129"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="@dimen/dp_10"/>


    <TextView
        android:id="@+id/begin1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/begin1_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="无双"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/movie1_summey"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:maxLines="5"
        android:text="影片详情"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/begin1_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/begin1_name"
        app:layout_constraintBottom_toTopOf="@+id/movie1_time"/>


    <TextView
        android:id="@+id/movie1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/begin1_image"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#999999"
        android:text="2018-09-09"/>

</android.support.constraint.ConstraintLayout>